global
	title "67 Magnetic Card Programmable Scientific Calculator"
	author "Eric Smith <eric@brouhaha.com>"
	hardware "Woodstock"
	model "67"
	rom "67.obj"
	image "67.png"
	color 0 81 21 109	  # background color, used when transparency is off
#	transparency 128
end

background
	offset 0 0
	size 290 629
end

display
	offset 10 21
	size 270 55

	color 0 60 0 0   # background
	color 1 60 0 0   # unlit segments
	color 2 255 17 17  # lit segments

	digits 15
		size 17 24
		offset 5 15
	end

	character 0x00 segment 'a' 'b' 'c' 'd' 'e' 'f'         end
	character 0x01 segment     'b' 'c'                     end
        character 0x02 segment 'a' 'b'     'd' 'e'     'g'     end
	character 0x03 segment 'a' 'b' 'c' 'd'         'g'     end
	character 0x04 segment     'b' 'c'         'f' 'g'     end
	character 0x05 segment 'a'     'c' 'd'     'f' 'g'     end
	character 0x06 segment 'a'     'c' 'd' 'e' 'f' 'g'     end
	character 0x07 segment 'a' 'b' 'c'                     end
	character 0x08 segment 'a' 'b' 'c' 'd' 'e' 'f' 'g'     end
	character 0x09 segment 'a' 'b' 'c' 'd'     'f' 'g'     end
	character 0x0a segment                 'e'     'g'     end # r
	character 0x0b segment 'a'         'd' 'e' 'f'         end # C
	character 0x0c segment         'c' 'd' 'e'     'g'     end # o
	character 0x0d segment     'b' 'c' 'd' 'e'     'g'     end # d
	character 0x0e segment 'a'         'd' 'e' 'f' 'g'     end # E
	character 0x0f segment                                 end # space
	character '.' segment                             'h' end
	character '-' segment                         'g'     end
	character ' ' segment                                 end

	segment 'a' line offset   0  0 size 12  1 end
	segment 'b' line offset  11  0 size  1 12 end
	segment 'c' line offset  11 11 size  1 12 end
	segment 'd' line offset   0 23 size 12  1 end
	segment 'e' line offset   0 11 size  1 12 end
	segment 'f' line offset   0  0 size  1 12 end
	segment 'g' line offset   0 11 size 12  1 end
	segment 'h' rect offset   4 16 size  4  4 end
end

switch 0
  size 25 9
  default 1
  position 0  offset  24 104  end  # off
  position 1  offset  39 104  end  # on
end

switch 1
  size 25 9
  default 1
  position 0  offset 209 104  flag 1  end  # program -- card reader flag 1
  position 1  offset 224 104          end  # run
end

