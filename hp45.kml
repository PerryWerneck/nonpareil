global
	title "HP-45 Advanced Scientific Calculator"
	author "Eric Smith <eric@brouhaha.com>"
	hardware "Classic"
	model "45"
	rom "hp45.lst"
	image "hp45.jpg"
end

background
	offset 0 0
	size 303 551
end

display
	digits 15
	offset 54 58
	size 192 11
	color 0 0 0 0      # background
	color 1 0 0 0      # unlit segments
	color 2 255 17 17  # lit segments
end

