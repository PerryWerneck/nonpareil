global
	title "HP-16C Computer Scientist Calculator"
	author "Eric Smith <eric@brouhaha.com>"
	hardware "Voyager"
	model "16C"
	rom "hp16c.obj"
	image "hp16c.png"
	color 0 137 0 6	  # background color, used when transparency is off
	# transparency 128
end

background
	offset 0 0
	size 654 410
end

display
	offset 118 35
	size 307 60

	color 0 130 134 120   # background
	color 1 130 134 120   # unlit segments
	color 2   0   0   0   # lit segments

	digits 10
		size 25 11
		offset 8 10
	end

	segment 'a' line offset   0  0 size  11  1 end
	segment 'b' line offset  10  0 size   1 11 end
	segment 'c' line offset  10 10 size   1 11 end
	segment 'd' line offset   0 20 size  11  1 end
	segment 'e' line offset   0 10 size   1 11 end
	segment 'f' line offset   0  0 size   1 11 end
	segment 'g' line offset   0 10 size  11  1 end

	segment 'h' rect offset  18 22 size 4 4 end  # period
	segment 'i' rect offset  16 26 size 4 4 end  # comma
end

